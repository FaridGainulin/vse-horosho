.content-privacy
  max-width: 450px
  width: 100%
  padding: 30px 12px 40px 12px
  background-color: $color-white
  text-align: start
  position: relative
  border-radius: 8px
  color: $color-black
  +above($breakpoints.sm)
    padding: 24px 20px 34px 20px
    max-width: 450px
  +above($breakpoints.md)
    max-width: 550px
    padding: 30px 36px 40px 36px
  +above($breakpoints.xxl)
    max-width: 650px
    padding: 30px 44px 40px 44px
  h3
    padding: 10px 0 0 0
    color: $color-purple-1
  &__close
    cursor: pointer
    position: absolute
    top: 6px;
    right: 11px;
    +above($breakpoints.sm)
      top: 6px
      right: 6px
    +above($breakpoints.md)
      top: 14px
      right: 14px
    +above($breakpoints.xxl)
      top: 20px
      right: 20px

  &__icon
    width 18px
    height: 18px
    transition: 0.3s
    background-image: url('../images/icon-close-2.svg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    +above($breakpoints.sm)
      width 22px
      height: 22px
    &:hover
      transform: scale(1.3)

  &__btn-up
    position absolute
    bottom: 10px;
    right: 9px;

  &__icon-up
    width 34px
    height: 34px
    border-radius: 100%
    background: $color-green-main
    cursor pointer
    display flex
    justify-content: center
    align-items: center
    animation: pulse 1.2s linear infinite;
    +above($breakpoints.md)
      width 40px
      height: 40px
    img
      width: 17px
      height: auto
      +above($breakpoints.md)
        width: 20px
    @keyframes pulse {
      0% {
        transform: translateY(0px)
      }
      50% {
        transform: translateY(5px)
      }
      100% {
        transform: translateY(0px)
      }
    }
.content-privacy h2
  text-align: center
  font-size: 17px
  line-height: 120%
  font-weight: bold
  color: $color-purple-1
  +above($breakpoints.sm)
    font-size: 21px
    margin-bottom: 10px
  +above($breakpoints.md)
    font-size: 24px
  +above($breakpoints.xxl)
    margin-bottom: 20px
    font-size: 26px

.content-privacy
  h3,
  strong
    margin-bottom: 8px
    font-size: 15px
    line-height: 120%
    +above($breakpoints.xxl)
      margin-bottom: 10px
      font-size: 16px
  p
    font-size: 14px
    line-height: 120%
    +above($breakpoints.sm)
      font-size: 14px
    +above($breakpoints.xxl)
      font-size: 16px
  li
    padding: 0 0 0 5%
    p
      font-size: 13px
      line-height: 120%

.content-privacy p
  margin: 5px 0
  +above($breakpoints.sm)
    margin: 10px 0
