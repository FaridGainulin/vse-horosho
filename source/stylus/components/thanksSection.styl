.thanks-section
  padding 100px 0
  display: flex
  align-items: center
  justify-content center
  height: 100%
  background-image: url("../images/main-section-bg.jpeg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__container
    max-width: 700px
    margin: 0 auto
    text-align: center

  &__text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

.thanks-header
  padding 30px 0