.presentation-section
  background-image: url("../images/presentation-section-bg.jpeg")
  background-repeat: no-repeat
  background-position: bottom
  background-size: contain
  background-color #618404

  &__container
    position relative
    padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 137px 0 80px 0

  &__title
    color $color-white
    padding-bottom 40px
    text-align: center
    +above($breakpoints.md)
      text-align: start

  &__img
    position: absolute
    top: 20px
    right: 2%