.city-section
  background-color #F3F3F3

  &__container
    padding: 30px 0
    +above($breakpoints.sm)
      padding 120px 0 112px 0

  &__title
    padding-bottom 18px
    text-align: center

  &__inner
    display: flex
    flex-direction: column
    gap 21px
    justify-content center
    align-items: center
    padding-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row

  &__inner-logo
    width 331px
    height: 132px

  &__bottom
    background-color #232323
    border-radius: 20px
    padding: 40px 20px
