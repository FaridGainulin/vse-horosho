.header
  &__inner
    display: flex
    flex-direction: column
    align-items: center
    gap: 0px
    +above($breakpoints.md)
      gap: 12px

    +above($breakpoints.md)
      justify-content space-between
      flex-direction: row
      align-items: center

  &__title
    display: none
    +above($breakpoints.md)
      display: block
      color $color-grey
      text-align: center