*
  padding: 0
  margin: 0
  box-sizing: border-box

html
  overflow-x: hidden

body,
html
  width 100%
  height: 100%
  

input,
button
  border: none
  outline: none

ul,
ol,
li
  list-style: none

h1,
h2,
h3,
h4,
h5,
h6
  padding: 0
  margin: 0
  font-size: 1em;

a
  text-decoration: none
  outline: none
  color: inherit

svg,
img
  display: block
  pointer-events: none

button
  display: block
  cursor: pointer