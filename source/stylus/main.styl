@font-face
  font-family: "InterTight-Bold"
  src: url('../fonts/InterTight-Bold.woff'), url('../fonts/InterTight-Bold.woff2')
  font-display: swap

@font-face
  font-family: "Manrope-Bold"
  src: url('../fonts/Manrope-Bold.woff'), url('../fonts/Manrope-Bold.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-ExtraBold"
  src: url('../fonts/Manrope-ExtraBold.woff'), url('../fonts/Manrope-ExtraBold.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Light"
  src: url('../fonts/Manrope-Light.woff'), url('../fonts/Manrope-Light.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Regular"
  src: url('../fonts/Manrope-Regular.woff'), url('../fonts/Manrope-Regular.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Manrope-Regular"
  font-weight: 400
  line-height: 140%
  color $color-grey

mark
  color: $color-green-sub
  background-color: inherit

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.wrapper
  width 100%
  max-width 1190px
  margin: 0 auto
  padding 0 15px

.wrapper-sub
  width 100%
  max-width 1190px
  margin: 0 auto

.main
  flex: 1

.vertical-form
  display: flex
  flex-direction: column
  width 100%
  max-width: 320px
  margin: 0 auto
  gap: 10px
  padding 0 10px

.horizontal-form
  display: flex
  flex-direction: column
  gap: 20px
  align-items: center
  +above($breakpoints.sm)
    flex-direction: row
    justify-content: center
  +above($breakpoints.md)
    gap: 40px

.horizontal-form-start
  display: flex
  flex-direction: column
  gap: 20px
  align-items: center
  justify-content: center
  +above($breakpoints.sm)
    flex-direction: row
  +above($breakpoints.md)
    justify-content: start
    gap: 40px

